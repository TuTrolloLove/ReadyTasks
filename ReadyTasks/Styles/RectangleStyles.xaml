<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="Shadow" TargetType="Rectangle">
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect
                    BlurRadius="30"
                    Direction="0"
                    Opacity="0.5"
                    ShadowDepth="5"
                    Color="Black" />
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>